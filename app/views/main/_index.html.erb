<%= form_tag({controller: "main", action: "index"}, method: "get") do %>
  <%= label_tag(:blog_url, "blog url:") %>
  <%= text_field_tag(:blog_url) %>
  <%= submit_tag("Search") %>
<% end %>
<% if @blog_url %>
  <% Collector.new(@blog_url).links.each do |link| %>
    <%= link %>
  <% end %>
<% end %>
